{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2022",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
    "compileOnSave": true,
    "exclude": [
      "lib",
      "node_modules"
    ],
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  }
  